<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bordered_ligh_block">

    <TextView
        android:id="@+id/tvObservationSwarmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/strPlaceholder"
        android:textColor="@color/colorText"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/colorText"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/strCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvObservationSwarmName" />

    <TextView
        android:textColor="@color/colorText"
        android:id="@+id/tvObservationCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="500"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bordered_dark_block"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="4dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <Button
                android:id="@+id/btnSmall_0"
                style="@style/SmallButtonStyle"

                android:text="0" />

            <Button
                android:id="@+id/btnSmall_1"
                style="@style/SmallButtonStyle"
                android:text="1" />

            <Button
                android:id="@+id/btnSmall_2"
                style="@style/SmallButtonStyle"
                android:text="2" />

            <Button
                android:id="@+id/btnSmall_3"
                style="@style/SmallButtonStyle"
                android:text="3" />

            <Button
                android:id="@+id/btnSmall_4"
                style="@style/SmallButtonStyle"
                android:text="4" />

            <Button
                android:id="@+id/btnSmall_5"
                style="@style/SmallButtonStyle"
                android:text="5" />
        </TableRow>

        <TableRow
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end">

            <Button
                android:id="@+id/btnSmall_m1"
                style="@style/SmallButtonStyle"
                android:text="-1" />

            <Button
                android:id="@+id/btnSmall_m2"
                style="@style/SmallButtonStyle"
                android:text="-2" />

            <Button
                android:id="@+id/btnSmall_m3"
                style="@style/SmallButtonStyle"
                android:text="-3" />

            <Button
                android:id="@+id/btnSmall_m4"
                style="@style/SmallButtonStyle"
                android:text="-4" />

            <Button
                android:id="@+id/btnSmall_m5"
                style="@style/SmallButtonStyle"
                android:text="-5" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>